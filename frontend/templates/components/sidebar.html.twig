{# Sidebar de navigation #}
<div id="sidebar-overlay" class="fixed inset-0 bg-black/40 z-20 hidden md:hidden"></div>

<aside
    id="app-sidebar"
    class="w-64 bg-dark-blue text-white flex flex-col h-screen fixed left-0 top-0 z-30 transform -translate-x-full transition-transform duration-200 md:translate-x-0 md:z-10"
>
    <button
        type="button"
        id="sidebar-close"
        class="md:hidden absolute top-4 right-4 p-2 rounded-lg text-white/90 hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-primary-green"
        aria-label="Fermer le menu"
    >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
    {# Logo / Branding #}
    <div class="p-6 border-b border-opacity-20 border-white">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-primary-green rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
            </div>
            <div>
                <h1 class="text-xl font-bold">RecettesPro</h1>
                <p class="text-xs text-opacity-70 text-white">Gestion de recettes</p>
            </div>
        </div>
    </div>

    {# Navigation principale #}
    <nav class="flex-1 py-6 px-4 space-y-2">
        <a href="{{ path('app_dashboard') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') == 'app_dashboard' %}bg-primary-green text-white{% else %}text-white hover:bg-opacity-20 hover:bg-white{% endif %}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="font-medium">Dashboard</span>
        </a>

        <a href="{{ path('app_recipes') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') starts with 'app_recipes' %}bg-primary-green text-white{% else %}text-white hover:bg-opacity-20 hover:bg-white{% endif %}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span class="font-medium">Mes Recettes</span>
        </a>

        <a href="{{ path('app_calendar') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') == 'app_calendar' %}bg-primary-green text-white{% else %}text-white hover:bg-opacity-20 hover:bg-white{% endif %}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span class="font-medium">Calendrier</span>
        </a>

        <a href="{{ path('app_planning') }}" 
               class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') starts with 'app_planning' %}bg-primary-green text-white{% else %}text-white hover:bg-opacity-20 hover:bg-white{% endif %}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <span class="font-medium">Planification</span>
        </a>
    </nav>

    {# Navigation secondaire #}
    <div class="border-t border-opacity-20 border-white py-4 px-4 space-y-2">
        <a href="{{ path('app_favorites') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 text-white hover:bg-opacity-20 hover:bg-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            <span class="font-medium">Favoris</span>
        </a>

        <a href="{{ path('app_shopping_list') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 text-white hover:bg-opacity-20 hover:bg-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="font-medium">Liste de courses</span>
        </a>
    </div>

    {# Footer sidebar (Paramètres, Aide, Profil) #}
    <div class="border-t border-opacity-20 border-white py-4 px-4 space-y-2">
        <a href="{{ path('app_settings') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 text-white hover:bg-opacity-20 hover:bg-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="font-medium">Paramètres</span>
        </a>

        <a href="{{ path('app_help') }}" 
           class="flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 text-white hover:bg-opacity-20 hover:bg-white">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium">Aide</span>
        </a>
    </div>

    {# Profil utilisateur #}
    <div class="border-t border-opacity-20 border-white p-4">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-primary-green rounded-full flex items-center justify-center">
                <span class="text-white font-semibold">MD</span>
            </div>
            <div class="flex-1">
                <p class="text-sm font-medium text-white">Marie Dubois</p>
                <p class="text-xs text-opacity-70 text-white">Utilisateur</p>
            </div>
        </div>
    </div>
</aside>

