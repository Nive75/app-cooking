<header class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 py-3 md:px-6 md:py-4">
        <div class="grid gap-3 md:grid-cols-[auto_minmax(0,520px)_auto] md:items-center md:gap-4">
            <div class="flex items-start md:items-center gap-3 min-w-0">
                    <button
                        type="button"
                        id="sidebar-open"
                        class="md:hidden inline-flex items-center justify-center w-11 h-11 rounded-lg bg-primary-green text-white shadow-sm hover:bg-opacity-90 transition-colors focus:outline-none focus:ring-2 focus:ring-primary-green focus:ring-offset-2 shrink-0"
                        aria-label="Ouvrir le menu"
                    >
                        <svg class="w-6 h-6 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </button>

                    <div class="min-w-0">
                        <h1 class="text-lg sm:text-xl md:text-2xl font-bold text-dark-blue leading-tight whitespace-nowrap truncate">
                            {% block page_title %}Tableau de bord{% endblock %}
                        </h1>
                        <div>
                            {% block page_subtitle %}
                            <p class="text-sm text-gray-600 mt-1 hidden md:block">Bienvenue, Marie! Voici un aper√ßu de vos recettes</p>
                            {% endblock %}
                            {% block page_count %}{% endblock %}
                        </div>
                    </div>
            </div>

            <div class="grid grid-cols-[1fr_auto] items-center gap-3 md:contents">
                {% block header_search %}
                <div class="relative w-full md:col-start-2 md:justify-self-center">
                    <input
                        type="text"
                        id="recipe-search"
                        placeholder="Rechercher une recette..."
                        class="pl-10 pr-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent"
                    >
                    <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
                {% endblock %}

                <div class="flex items-center gap-3 justify-end md:col-start-3 md:justify-self-end">
                    {% block header_actions %}
                    <button class="relative p-2 text-gray-600 hover:text-dark-blue hover:bg-light-blue rounded-lg transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                        <span class="absolute top-1 right-1 w-2 h-2 bg-primary-green rounded-full"></span>
                    </button>
                    {% endblock %}

                    <div class="w-10 h-10 bg-primary-green rounded-full flex items-center justify-center cursor-pointer hover:bg-opacity-90 transition-colors">
                        <span class="text-white font-semibold text-sm">MD</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>