{% extends 'layouts/app.html.twig' %}

{% block header %}
    {% embed 'components/header.html.twig' %}
        {% block page_title %}Mes Ingrédients{% endblock %}
        
        {% block page_subtitle %}
            <p class="text-sm text-gray-500 mt-1" id="ingredients-count">
                <span id="ingredients-count-number">0</span> ingrédient(s) trouvé(s)
            </p>
        {% endblock %}
        
        {% block header_search %}
            <div class="relative w-full md:col-start-2 md:justify-self-center">
                <input
                    type="text"
                    id="ingredient-search"
                    placeholder="Rechercher un ingrédient..."
                    class="pl-10 pr-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent"
                >
                <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
        {% endblock %}
        
        {% block header_actions %}
            <a 
                href="{{ path('app_ingredients_new') }}" 
                class="inline-flex items-center justify-center gap-2 bg-primary-green text-white font-semibold px-4 py-2 rounded-lg hover:bg-opacity-90 transition-all duration-200 shadow-sm hover:shadow-md"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span>Nouvel ingrédient</span>
            </a>
            <button class="relative p-2 text-gray-600 hover:text-dark-blue hover:bg-light-blue rounded-lg transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span class="absolute top-1 right-1 w-2 h-2 bg-primary-green rounded-full"></span>
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="space-y-6">
        {# Filtres et options de vue #}
        <div class="bg-white rounded-xl shadow-sm p-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                {# Filtres par caractéristiques nutritionnelles #}
                <div class="flex flex-wrap items-center gap-2">
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200 active-filter"
                        data-filter="all"
                    >
                        Tous
                    </button>
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200"
                        data-filter="lactose"
                    >
                        Sans lactose
                    </button>
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200"
                        data-filter="gluten"
                    >
                        Sans gluten
                    </button>
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200"
                        data-filter="proteines"
                    >
                        Riche en protéines
                    </button>
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200"
                        data-filter="fibres"
                    >
                        Riche en fibres
                    </button>
                    <button 
                        class="ingredient-filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200"
                        data-filter="vitamines"
                    >
                        Riche en vitamines
                    </button>
                </div>

                {# Options de vue #}
                <div class="flex items-center gap-2">
                    {# Icône de tri/filtre (optionnel) #}
                    <button 
                        class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200"
                        title="Options de tri"
                    >
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                    </button>

                    {# Vue grille (active par défaut) #}
                    <button 
                        class="view-toggle-btn active-view p-2 rounded-lg transition-all duration-200"
                        data-view="grid"
                        title="Vue grille"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                    </button>

                    {# Vue liste #}
                    <button 
                        class="view-toggle-btn p-2 rounded-lg text-gray-600 hover:bg-gray-100 transition-all duration-200"
                        data-view="list"
                        title="Vue liste"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        {# Grille d'ingrédients #}
        <div id="ingredients-container" class="recipes-grid">
            {# Les cartes d'ingrédients seront ajoutées dynamiquement ici via JavaScript #}
            <div class="col-span-full text-center py-12 text-gray-500">
                <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                <p class="text-lg font-semibold">Aucun ingrédient pour le moment</p>
                <p class="text-sm mt-2">Créez votre premier ingrédient pour commencer</p>
            </div>
        </div>
    </div>
{% endblock %}
