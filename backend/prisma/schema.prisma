generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Recipe {
  id                Int        @id @default(autoincrement())
  titre             String     @db.VarChar(255)
  description       String
  temps_preparation Int?
  image_url         String?    @db.VarChar(500)
  is_favorite       Boolean?   @default(false)
  created_at        DateTime?  @default(now()) @db.Timestamp(6)
  updated_at        DateTime?  @default(now()) @updatedAt @db.Timestamp(6)
  mealPlans         MealPlan[]
  recipeIngredients RecipeIngredient[]

  @@index([is_favorite], map: "idx_recipes_is_favorite")
  @@index([created_at], map: "idx_recipes_created_at")
  @@index([titre], map: "idx_recipes_titre")
  @@map("recipes")
}

model Ingredient {
  id                Int                @id @default(autoincrement())
  nom               String              @db.VarChar(255)
  unite             String?             @db.VarChar(50)
  sans_lactose      Boolean?            @default(false)
  sans_gluten       Boolean?            @default(false)
  riche_proteines   Boolean?            @default(false)
  riche_fibres      Boolean?            @default(false)
  riche_vitamines   Boolean?            @default(false)
  created_at        DateTime?           @default(now()) @db.Timestamp(6)
  updated_at        DateTime?           @default(now()) @updatedAt @db.Timestamp(6)
  recipeIngredients RecipeIngredient[]

  @@index([nom], map: "idx_ingredients_nom")
  @@index([sans_lactose], map: "idx_ingredients_sans_lactose")
  @@index([sans_gluten], map: "idx_ingredients_sans_gluten")
  @@index([riche_proteines], map: "idx_ingredients_riche_proteines")
  @@index([riche_fibres], map: "idx_ingredients_riche_fibres")
  @@index([riche_vitamines], map: "idx_ingredients_riche_vitamines")
  @@map("ingredients")
}

model RecipeIngredient {
  id            Int        @id @default(autoincrement())
  recipe_id     Int
  ingredient_id Int
  quantite      String?    @db.VarChar(100)
  created_at    DateTime?  @default(now()) @db.Timestamp(6)
  recipe        Recipe     @relation(fields: [recipe_id], references: [id], onDelete: Cascade)
  ingredient    Ingredient @relation(fields: [ingredient_id], references: [id], onDelete: Cascade)

  @@unique([recipe_id, ingredient_id], map: "uq_recipe_ingredient")
  @@index([recipe_id], map: "idx_recipe_ingredient_recipe")
  @@index([ingredient_id], map: "idx_recipe_ingredient_ingredient")
  @@map("recipe_ingredients")
}

model MealPlan {
  id         Int       @id @default(autoincrement())
  date       DateTime  @db.Date
  moment     String    @db.VarChar(50)
  recipe_id  Int?
  note       String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @updatedAt @db.Timestamp(6)
  recipe     Recipe?   @relation(fields: [recipe_id], references: [id], onUpdate: NoAction)

  @@index([date], map: "idx_meal_plan_date")
  @@index([date, moment], map: "idx_meal_plan_date_moment")
  @@index([recipe_id], map: "idx_meal_plan_recipe_id")
  @@map("meal_plan")
}

model ShoppingItem {
  id         Int       @id @default(autoincrement())
  nom        String    @db.VarChar(255)
  quantite   String?   @db.VarChar(100)
  coche      Boolean?  @default(false)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@index([coche], map: "idx_shopping_items_coche")
  @@index([nom], map: "idx_shopping_items_nom")
  @@map("shopping_items")
}
